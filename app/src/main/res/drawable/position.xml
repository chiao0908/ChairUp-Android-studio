        android:state_activated="true">
        <shape>
            <stroke
                android:width="5dp"
                android:color="#BBBDFF">
            </stroke>
            <solid android:color="#7174ff">

            </solid>
            <corners
                android:radius="5dp">
            </corners>
        </shape>
